{% extends 'manager_base.html.twig' %}

{% block title %}Gérer la base de données{% endblock %}

{% block tableTitle %}
    Contenu de <strong>{{ query_name }}</strong>:
{% endblock %}

{% block tableHeads %}
    <tr>
        {% for row in query_field %}
            <th>{{ row }}</th>
        {% endfor %}
    </tr>
{% endblock %}

{% block tableContents %}
    {% for row in query_result %}
        <tr>
            {% for field in row.toArray() %}
                <td>{{ field }}</td>
            {% endfor %}
        </tr>
    {% endfor %}

{% endblock %}

{% block tableFeet %}
    <tr>
        {% for row in query_field %}
            <th>{{ row }}</th>
        {% endfor %}
    </tr>
{% endblock %}